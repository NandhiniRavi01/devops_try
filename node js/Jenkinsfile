pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'nodejs-app'  // Name of the Docker image
    }

    stages {
        stage('Checkout Code') {
            steps {
                // Check out your code from the Git repository
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image from the Dockerfile in the root of the repository
                    sh 'docker build -t $DOCKER_IMAGE .'
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Run the Docker container with the app.js file as the entry point
                    sh 'docker run -d --name $DOCKER_IMAGE -p 3000:3000 $DOCKER_IMAGE'
                }
            }
        }

        stage('Test Node.js App') {
            steps {
                script {
                    // You can use curl or other methods to check if the app is running correctly
                    sh 'curl http://localhost:3000'
                }
            }
        }
    }

    post {
        always {
            // Stop and remove the Docker container after the build
            script {
                sh 'docker stop $DOCKER_IMAGE || true'
                sh 'docker rm $DOCKER_IMAGE || true'
            }
        }
    }
}
