pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', 
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[url: 'https://github.com/NandhiniRavi01/devops_try', 
                                         credentialsId: 'git-credential']]  // Replace with Git credentials ID
                ])
            }
        }
        stage('Install Node.js') {
            steps {
                // Run shell commands to install Node.js
                sh '''
                    curl -fsSL https://deb.nodesource.com/setup_18.x | sudo -E bash -
                    sudo apt-get install -y nodejs
                '''
            }
        }

        // Stage to verify the installation of Node.js
        stage('Verify Node.js Installation') {
            steps {
                // Verify Node.js and npm installation
                sh 'node -v'
                sh 'npm -v'
            }
        }

       
            

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t nodejs-app .'
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    sh 'docker run -d -p 3000:3000 nodejs-app'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline complete.'
        }
    }
}
