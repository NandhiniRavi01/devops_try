pipeline {
    agent any

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build('my-node-app')
                }
            }
        }
        stage('Run Docker Container') {
            steps {
                script {
                    def app = docker.image('my-node-app')
                    app.withRun('-p 3000:3000') { c ->
                        sh 'node index.js'
                    }
                }
            }
        }
    }
}
