pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                // Checkout the code from your GitHub repository
                git branch: 'master', url: 'https://github.com/NandhiniRavi01/devops_try.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image using the Dockerfile in the repository
                    docker.build('my-node-app', '.')
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Run the Docker container
                    docker.image('my-node-app').inside {
                        // Ensure the container runs using index.js
                        sh 'node index.js' 
                    }
                }
            }
        }

        stage('Clean Up') {
            steps {
                script {
                    // Optionally stop and remove Docker container and images
                    sh 'docker container prune -f'
                    sh 'docker image prune -f'
                }
            }
        }
    }

    post {
        always {
            // Cleanup workspace after the build
            cleanWs()
        }
    }
}
