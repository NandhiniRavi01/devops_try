pipeline {
    agent {
        docker { image 'nodejs-app' }
    }

    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', 
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[url: 'https://github.com/NandhiniRavi01/devops_try', 
                                         credentialsId: 'git-credential']]
                ])
            }
        }

        stage('Test Node.js') {
            steps {
                sh 'node --version' 
                sh 'npm --version'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t nodejs-app .'
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    sh 'docker run -d -p 3000:3000 nodejs-app'
                }
            }
        }

        stage('Run app.js') {
            steps {
                script {
                    // Run the Node.js app.js file inside the container
                    sh 'docker exec $(docker ps -q --filter ancestor=nodejs-app) node app.js'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline complete.'
        }
    }
}
