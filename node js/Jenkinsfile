pipeline {
    agent any
    environment {
        SUDO_PASSWORD = credentials('sudo-credentials')  // Replace 'sudo-password-id' with your Jenkins credential ID
    }
    
   
        
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/NandhiniRavi01/devops_try'
            
            }
        }
       stage('Install Node.js') {
            steps {
            script {
                    
                    // Clean up potential package locks
                    sh """
                    echo $SUDO_PASSWORD
                    sudo -S rm -f /var/lib/apt/lists/lock
                    sudo -S rm -f /var/cache/apt/archives/lock
                    """

                    // Remove the conflicting package if it exists
                    sh """
                    sudo -S apt-get remove -y libnode-dev
                    """

                    // Install Node.js 20.x
                    sh """
                    sudo -S curl -fsSL https://deb.nodesource.com/setup_20.x | sudo -E bash -
                    sudo -S apt-get install -y nodejs
                    """
                }            
            }
        }
        


        // Stage to verify the installation of Node.js
        stage('Verify Node.js Installation') {
            steps {
                // Verify Node.js and npm installation
                sudo 'node -v'
                sudo 'npm -v'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image
                    sh 'docker build -t nodejs-app .'
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Run the Docker container
                    sh 'docker run -d -p 3000:3000 nodejs-app'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline complete.'
        }
    }
}
