pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/NandhiniRavi01/devops_try'
            }
        }
        stage('Install Node.js and npm') {
            steps {
                sh 'nvm install 18 && nvm use 18'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Run Application') {
            steps {
                sh 'node index.js' // Update this line if the entry file is different
            }
        }
    }
}
