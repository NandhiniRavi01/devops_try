pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                // Checkout the code from your GitHub repository
                git branch: 'main', url: 'https://github.com/NandhiniRavi01/devops_try.git'
            }
        }

       stage('Build Docker Image') {
            steps {
                script {
                    docker.build('my-node-app')
                }
            }
        }
        stage('Run Docker Container') {
            steps {
                script {
                    def app = docker.image('my-node-app')
                    app.withRun('-p 3000:3000') { c ->
                        sh 'node install'
                        sh 'node index.js'
                    }
                }
            }
        }

        

        stage('Clean Up') {
            steps {
                script {
                    // Optionally stop and remove Docker container and images
                    sh 'docker container prune -f'
                    sh 'docker image prune -f'
                }
            }
        }
    }

    post {
        always {
            // Cleanup workspace after the build
            cleanWs()
        }
    }
}
