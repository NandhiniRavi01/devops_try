pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', 
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[url: 'https://github.com/NandhiniRavi01/devops_try', 
                                         credentialsId: 'git-credential']]
                ])
            }
        }

        stage('Test Node.js') {
            steps {
                sh 'node --version'
                sh 'npm --version'
            }
        }

        stage('Build Docker Image') {
            agent {
                docker { image 'docker:20.10.7' }  // Docker image with Docker installed
            }
            steps {
                script {
                    sh 'docker build -t nodejs-app .'
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    sh 'docker run -d -p 3000:3000 nodejs-app'
                }
            }
        }

        stage('Run app.js') {
            steps {
                script {
                    sh 'docker exec $(docker ps -q --filter ancestor=nodejs-app) node app.js'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline complete.'
        }
    }
}
